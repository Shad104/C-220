@model HomeWork6.Models.BirthdayCardContent
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>

@using (Html.BeginForm())
{
    <h1>Send a Birthday Card</h1>
    @Html.ValidationSummary()
    <div class="form-group">
        <label for="From">From</label>
        <input type="text" class="form-control" id="From" placeholder="Enter Your Name" name="From" data-bind="From" style="width:400px;"/>
    </div>
    <div class="form-group">
        <label for="To">To</label>
        <input type="text" class="form-control" id="To" placeholder="Enter Recipient" name="To" data-bind="To" style="width:400px;"/>
    </div>
    <div class="form-group">
        <label for="Message">Message</label>
        <input type="text" class="form-control" id="Message" placeholder="Enter Message" name="Message" data-bind="Message" style="width:400px;"/>
    </div>
    <button type="submit" class="btn btn-primary">Send Card!</button>
}
